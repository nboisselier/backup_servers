backup_servers_post_logs() {
  backup_servers --log2csv $@ | awk -F '\t' 'nohead++{print $0}' | while read host files_transfer files_total bytes_transfer bytes_total time dirs
  do
    nb_api_post host_info key=backup_servers.$host.files_transfer "val=$files_transfer"
    nb_api_post host_info key=backup_servers.$host.files_total "val=$files_total"
    nb_api_post host_info key=backup_servers.$host.bytes_transfer "val=$bytes_transfer"
    nb_api_post host_info key=backup_servers.$host.bytes_total "val=$bytes_total"
    nb_api_post host_info key=backup_servers.$host.time "val=$time"
    nb_api_post host_info key=backup_servers.$host.dirs "val=$dirs"
  done
}
